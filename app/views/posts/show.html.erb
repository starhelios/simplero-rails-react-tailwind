<div class='container mx-auto mt-6'>
  <div class='inline-block w-2/3 align-top'>
    <h1 class='text-3xl mb-3'><%= @post.title %> </h1>
    <p class='text-sm mb-8'>
      <%= @post.description %>
    </p>
    <h1 class='text-2xl mb-3'>Comments </h1>
    <% if @post.comments.present? %>
      <% @post.comments.each do |comment|%>
        <%= render(Cards::CommentListingCardComponent.new(comment: comment, current_user: @current_user)) %>
      <% end %>
    <% else %>
      <h3 class="text-center bg-gray-100 p-5">Wow :) Such an empty! </h3>
    <% end %>
  </div>
</div>
