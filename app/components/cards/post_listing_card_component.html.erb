<div class='mb-8'>
  <h2 class='text-xl mb-1'><%= @post.title %></h2>
  <p class='text-sm mb-4'>
    <%= @post.description.truncate(200) %>
  </p>
  <div class='text-sm text-gray-400'>
    <div class='mb-4'>
      <% if @post.last_comment_time %>
        <span>Last Comment <%= time_ago_in_words @post.last_comment_time %> ago</span>
        <span class='mx-3'>|</span>
      <% end %>
      <% if @is_author %>
        <span><%= link_to 'Edit', edit_post_path(@post), class: "hover:text-brand-primary-hover" %></span>
        <span class='mx-3'>|</span>
        <span><%= button_to 'Delete', post_path(@post.id) , method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')", form_class: "inline text-red-400" %></span>
        <span class='mx-3'>|</span>
      <% end %>
      <span>Created By <%= @is_author ? 'You': @post.user.name %></span>
    </div>
    <div><%= link_to 'View Post', post_path(@post), class: "hover:text-brand-primary-hover" %></div>
  </div>
</div>
