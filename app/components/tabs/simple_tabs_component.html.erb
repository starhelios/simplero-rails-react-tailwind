<div
      class='mb-4 rounded inline-flex border-black border-2 shadow-md hover:shadow-lg focus:shadow-lg'
      role='group'
    >
  <% @tabs.each_with_index do |tab, idx| %>
    <button
      type='button'
      class="inline-block px-6 py-2.5 font-medium text-xs leading-tight uppercase transition duration-150 ease-in-out <%= @active_tab == idx  ? 'bg-brand-primary text-white' : 'hover:text-brand-primary-hover' %>">
      <%= tab %>
    </button>
  <% end %>
</div>
